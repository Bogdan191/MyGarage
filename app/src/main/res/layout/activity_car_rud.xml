<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarRUDActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_activity_my_cars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_gradient_drawable"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/side_menu" />

    <TextView
        android:id="@+id/textViewCarDetails"
        android:layout_width="335dp"
        android:layout_height="356dp"
        android:layout_below="@+id/toolbar_activity_my_cars"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="37dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewCarDetails"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_below="@+id/toolbar_activity_my_cars"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="118dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/buttonDeleteCarFromDB"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCarDetails"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="109dp"
        android:text="Sterge masina" />


</RelativeLayout>