<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient_drawable">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="39dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitleAddNewCar"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="@string/adauga_o_noua_masina"
                android:textAlignment="center"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marca"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editTextAddCarMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Marca (Ex:  Ford)"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editTextAddCarModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Ex: Focus"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAddCarManufacturedData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Data fabricarii"
                    android:textSize="18sp" />

                <DatePicker
                    android:id="@+id/datePickerAddCarManufacturedData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarEmissionStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emisii:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editTextAddCarEmissionStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:hint="Ex: EURO 5"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarEngineCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motor :" />

                <EditText
                    android:id="@+id/editTextAddCarEngineCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38sp"
                    android:hint="Ex: 1.6L"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cai putere:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editTextAddCarHP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:inputType="textPersonName"
                    android:hint="Ex: 109HP"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddcarRimSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dim. roti:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextAddCarRimSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23sp"
                    android:inputType="textPersonName"
                    android:hint="Ex: 195/65 R16"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarCurrMarketValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Val. curenta"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextAddCarCurrMarketValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:inputType="textPersonName"
                    android:hint="Valoarea actuala?(ex: 4000â‚¬)"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarOdometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rulaj(km): "
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editTextAddCarOdometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14sp"
                    android:inputType="textPersonName"
                    android:hint="Ex: 200000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAddCarManualGearbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cutie manuala?"
                    android:textSize="15sp"/>

                <CheckBox
                    android:id="@+id/checkboxAddCarManualGearbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/addCarImageView"
                    android:layout_width="512px"
                    android:layout_height="512px"
                    android:layout_gravity="center"
                    tools:srcCompat="@drawable/ic_my_cars"/>
                <ImageButton
                    android:id="@+id/buttonAddCarImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/ic_add_car_image"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:text="Adauga documentele  masinii"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAddCarItpEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Valabilitate Itp"
                    android:textSize="18sp"/>

                <DatePicker
                    android:id="@+id/datePickerAddCarItpEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:datePickerMode="spinner"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:calendarViewShown="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAddCarInsuranceEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Data expirare asigurare"
                    android:textSize="18sp"/>

                <DatePicker
                    android:id="@+id/datePickerAddCarInsuranceEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:datePickerMode="spinner"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:calendarViewShown="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAddcarRoadTaxEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Data expirare Rovigneta"
                    android:textSize="18sp"/>

                <DatePicker
                    android:id="@+id/datePickerAddCarRoadTaxEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:datePickerMode="spinner"
                    android:ems="10"
                    android:calendarViewShown="false" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Adauga istoricul service al masinii (ulterioare informatii despre istoricul service pot fi adaugate dupa ce masina este inregistrata in baza de date)"
                android:textAlignment="center"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAddCarServiceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Data operatiune service"
                    android:textSize="18sp"/>
                <DatePicker
                    android:id="@+id/datePickerAddCarServiceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:datePickerMode="spinner"
                    android:ems="10"
                    android:calendarViewShown="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/editTextAddCarServiceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="Detalii despre operatiunile facute in aceasta perioada.(Ex: mentenanta, reconditionare turbina, schimbare placute frana etc.)"
                    android:lines="10"
                    android:maxLines="15"
                    android:minLines="5"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/addCarToDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="Adauga masina" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>